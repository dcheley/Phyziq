
<!DOCTYPE html>
<html>
  <body>
    <div class="container">
      <div class="row">
        <div class="col s10 pull-s1">
          <div class="card blue-grey lighten-4">
            <div class="card-content black-text">
              <%= image_tag "identity.png" %></br>
              <span class="card-title">Training session details</span>
                <div class="user_profile">
                  <div class="user_info">
                    <h5><%= @appointment.summary %></h5>
                    <p>Start Time: <div class="display_event"><%= @appointment.event_start_time.in_time_zone("America/New_York")  %></div></p>
                    <p>End Time: <div class="display_event"><%= @appointment.event_end_time.in_time_zone("America/New_York") %></div></p></br>
                    <p>Trainer Location: <div class="display_event"><%= @appointment.address %></div></p></br>
                  </div>
                </div>

          <div class="sub-cancel_button center-align">
            <button class="btn waves-effect waves-light orange" type="submit" name="action">
              <%= button_to "delete", {:controller => :appointments, :action => 'destroy', :id => @appointment.id }, :method => :delete %>
            </button>
              <%= link_to "Back to your profile", user_url(@user), class:"btn waves-effect waves-light orange" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
  </body>
</html>
