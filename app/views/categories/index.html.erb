<!DOCTYPE html>
<html>
  <body>
    <div class="trainer_list">
      <% @user.each do |t|%>
        <% if t.category != true %>
          <% t.category.attributes.each do |key, value| %>
            <% if value == true && key == "crossfit" %>
              <h4><%= link_to "#{t.name}", "/users/#{t.id}" %></h4>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </body>
</html>
