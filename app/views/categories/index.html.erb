     <div class="col s10 m4 offset-l4">
       <div class="card blue-grey darken-1">
         <div class="card-content white-text">
           <h3>Boxing Trainers</h3>
           <!-- Search Boxing -->
           <div class="trainer_list">
             <% @user.each do |t|%>
               <% if t.category != nil %>
                 <% t.category.attributes.each do |key, value| %>
                   <% if value == true && key == "boxing" %>
                     <h4><%= link_to "#{t.name}", "/users/#{t.id}" %></h4>
                   <% end %>
                 <% end %>
               <% end %>
             <% end %>
           </div>
         </div>
       </div>
     </div>
