<!DOCTYPE html>
<html>
  <body>
    <h3>Choose Your Training Categories</h3>
    <%= form_for ([@user, @category]) do |f| %>
      <% if @category.errors.any? %>
      <div id="error_explanation">
        <h4><%= pluralize(@category.errors.count, "error") %> Error occurred! Please try again!</h4>
        <ul class="error_msg">
          <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form_container">
      <div class="form">
      <%= f.check_box :boxing %>
      <%= f.label :boxing %></br>
      </div><br>

      <div class="form">
        <%= f.check_box :cardio %>
        <%= f.label :cardio %></br>
      </div><br>

      <div class="form">
        <%= f.check_box :crossfit %>
        <%= f.label :crossfit %></br>
      </div><br>

      <div class="form">
        <%= f.check_box :kickboxing %>
        <%= f.label :kickboxing %></br>
      </div><br>

      <div class="form">
        <%= f.check_box :running %>
        <%= f.label :running %></br>
      </div><br>

      <div class="form">
        <%= f.check_box :squash %>
        <%= f.label :squash %></br>
      </div><br>

      <div class="form">
        <%= f.check_box :weightlifting %>
        <%= f.label :weightlifting %></br>
      </div><br>


      <div class="form">
        <%= f.check_box :yoga %>
        <%= f.label :yoga %></br>
      </div><br>

      <div class="form">
        <%= f.hidden_field :user_id, :value => @user.id %>
      </div><br>

      <div class="sub-cancel_button center-align">
        <button class="btn waves-effect waves-light red" type="submit" name="action">Submit
        </button>

        <button class="btn waves-effect waves-light orange white-text" type="submit" name="action">
          <%= link_to "Cancel", user_url(@user) %>
        </button>
      </div>
    <% end %>
    </div>

  </body>
</html>
