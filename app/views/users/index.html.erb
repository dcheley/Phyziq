<div class="parallax-container">
  <div class="parallax"><%= image_tag("O7MF4F0.jpg")%></div>
    <div class="container">
      <div class="row">
        <div class="col l10 offset-l1 white-text">
          <h1>Find a trainer in your area</h1>
            <div class="search_bar">
              <%= form_tag(users_url, :method => "get", id: "search-form") do %>
              <%= text_field_tag :search, params[:search], placeholder: "BY NAME OR ADDRESS", required: true %>
                <%= submit_tag "Search", class:"waves-effect waves-light orange lighten-1 btn" %></br>
                <% end %>
               </div>
               <div class="search_category">
              <h4>Or... <%= link_to "search by training category", "/categories" %></h4>
            </div></br>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>

<h3>Trainer Index:</h3>
  <div class="trainer_count">
    <p><%= @user.where(:trainer => true).count %> Trainers found!</p>
  </div>

<% @user.each do |t|%>
  <% if t.trainer == true %>
  <div class="row">
    <div class="col s10 m4 offset-l4">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <div class="trainer_list">
              <h4><%=link_to "#{t.name}", "/users/#{t.id}" %></h4>
                <% if t.category != nil %>
                  <% t.category.attributes.each do |key, value| %>
                    <% if value == true %>
                    <h6><%= "#{key.capitalize}" %></h6>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
