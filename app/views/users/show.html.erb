<% if current_user == @user %>
  <h3 class="user_welcome">Welcome <%= @user.name %>!</h3>
<% else %>
  <h3 class="user_header"><%= @user.name %>'s page</h3>
<% end %>

<!-- Materialize Card Layout -->
<!-- Card 1 -->
<div class="row">
  <div class="col m4 s12">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Profile</span>
          <div class="user_profile">
            <div class="card-action">
              <p class="edit_link"><%= link_to "EDIT", "/users/#{@user.id}/edit" %></p>
            </div>
            <div class="user_info">
              <p>User: <div class="display"><%= @user.name %></div></p>
              <p>Email: <div class="display"><%= @user.email %></div></p>
              <p>Address: <div class="display"><%= @user.address %></div></p>
            </div>
          </div>
      </div>
    </div>
  </div>
<!-- Card 2 -->
  <div class="col m4 s12">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Events</span>
          <div class="user_profile">
            <div class="card-action">
              <p class="edit_link"><%= link_to "EDIT", "/users/#{@user.id}/edit" %></p>
            </div>
            <div class="user_info">
              <p>User: <div class="display"><%= @user.name %></div></p>
              <p>Email: <div class="display"><%= @user.email %></div></p>
              <p>Address: <div class="display"><%= @user.address %></div></p>
            </div>
          </div>
      </div>
    </div>
  </div>
<!-- Card 3 -->
  <div class="col m4 s12">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Category</span>
          <div class="user_profile">
            <div class="card-action">
              <p class="edit_link"><%= link_to "EDIT", "/users/#{@user.id}/edit" %></p>
            </div>
            <div class="user_info">
              <p>User: <div class="display"><%= @user.name %></div></p>
              <p>Email: <div class="display"><%= @user.email %></div></p>
              <p>Address: <div class="display"><%= @user.address %></div></p>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>

<div >
  <%= @weekly_event_list %>
</div>


<div class="events_title">
  <h4><%= @user.name %>'s Events:</h4>
</div>

<div class="weekly_calendar">
  <div class="weekly_day_one">
    <%= link_to "#{@weekly_event_list[0]}", :day_1 %>
  </div>
  <div class="weekly_day_two">
    <%= link_to "#{@weekly_event_list[1]}", :day_2 %>
  </div>
  <div class="weekly_day_three">
    <%= link_to "#{@weekly_event_list[2]}", :day_3 %>
  </div>
  <div class="weekly_day_four">
    <%= link_to "#{@weekly_event_list[3]}", :day_4 %>
  </div>
  <div class="weekly_day_five">
    <%= link_to "#{@weekly_event_list[4]}", :day_5 %>
  </div>
  <div class="weekly_day_six">
    <%= link_to "#{@weekly_event_list[5]}", :day_6 %>
  </div>
  <div class="weekly_day_seven">
    <%= link_to "#{@weekly_event_list[6]}", :day_7 %>
  </div>
</div>

<div style="text-align: left;">
  <% if logged_in? %>
    Currently logged in as: <%= current_user.email %> |
    <% if current_user.has_linked_google? %>
      Account linked with Google!
      <!-- <%= link_to 'Unlink your Google account', delete_oauth_path('google'), method: :delete %> -->
    <% else %>
      <%= link_to 'Link your Google', auth_at_provider_path(:provider => :google) %>
    <% end %>
      <!-- <%= link_to 'Logout', :logout %> -->
  <% end %>
</div>
